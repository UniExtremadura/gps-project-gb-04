<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    card_view:cardBackgroundColor="#FFFFFF"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="20dp"
    card_view:contentPadding="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Imagen de la película -->
        <ImageView
            android:id="@+id/iv_image_horizontal"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:background="#FEE1D4"/>

        <!-- Contenedor para el título y el año de lanzamiento -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Título de la película -->
            <TextView
                android:id="@+id/tv_title_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat_alternates_bold"
                android:textColor="#E23155" />

            <!-- Año de lanzamiento -->
            <TextView
                android:id="@+id/tv_release_year_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="#000000"
                android:fontFamily="@font/montserrat_alternates" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
