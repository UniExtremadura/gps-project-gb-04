<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_pastel_gradient"
    tools:context=".view.PasswordForgetActivity" >

    <EditText
        android:id="@+id/et_firstname2"
        android:layout_width="142dp"
        android:layout_height="45dp"
        android:layout_marginTop="57dp"
        android:backgroundTint="#000000"
        android:fontFamily="@font/montserrat_alternates"
        android:gravity="start"
        android:hint="Recovery email"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/et_title2"
        app:layout_constraintTop_toBottomOf="@+id/et_title2"
        tools:ignore="MissingConstraints"
        tools:textColorHint="#333333" />

    <TextView
        android:id="@+id/et_title2"
        android:layout_width="309dp"
        android:layout_height="59dp"
        android:layout_marginTop="144dp"
        android:fontFamily="@font/open_sans_extrabold"
        android:text="@string/introduce_email"
        android:textAlignment="viewStart"
        android:textColor="#E23155"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_recover"
        android:layout_width="240dp"
        android:layout_height="51dp"
        android:layout_marginBottom="160dp"
        android:backgroundTint="#ED3257"
        android:fontFamily="@font/open_sans_extrabold"
        android:text="Recover"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>