<?xml version="1.0" encoding="utf-8"?>
<resources>
    <string name="category_technology">Technology</string>
    <string name="category_health">Health</string>
    <string name="category_science">Science</string>
    <string name="category_general">General</string>
    <string name="category_entertainment">Entertainment</string>
    <string name="category_sports">Sports</string>

    <!-- Estilo de la letra de categorÃ­a -->
    <style name="CategoryText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
    </style>

    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="tabIndicatorColor">@color/grey</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- for text -->
    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/montserrat_alternates</item>
    </style>
</resources>
